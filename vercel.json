{
    "version": 2,
    "builds": [
        { "src": "public/**", "use": "@vercel/static" },
        { "src": "server.php", "use": "vercel-php@0.3.1" }
    ],
    "routes": [
        { "src": "/favicon.ico", "dest": "/favicon.ico" },
        { "src": "/robots.txt", "dest": "/robots.txt" },
        { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
        { "src": "/(.*)", "dest": "/server.php" }
    ]
}
